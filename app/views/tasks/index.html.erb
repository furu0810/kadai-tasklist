<h1>タスク管理アプリ</h1>

  <h3>タスク一覧</h3>
        
    <ul>
            
      <% @tasks.each do |task| %>
            
        <li>
          <%= link_to task.id, task %>
                
          <%= task.status %>
                
          &gt;
                
          <%= task.content %>
        </li>
            
      <% end %>
            
    </ul>
    
    <%= paginate @tasks %>
        
    <%= link_to "新規タスクの投稿ページ", new_task_path %>
            