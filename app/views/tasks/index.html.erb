

  <h3>タスク一覧</h3>
  
  <% if @tasks.any? %>
        
    <table class="table table-striped">
      <thead>
        <tr>
          <th class="text-center">id</th>
          <th class="text-center">ステータス</th>
          <th class="text-center">タスク内容</th>
        </tr>
      </thead> 
         
      <tbody>
             
        <% @tasks.each do |task| %>
          
          <tr>  
            <td class="text-center">
          <%= link_to task.id, task %>
            </td>   
            
            <td class="text-center">
          <%= task.status %>
            </td>
            
          
            <td class="text-center"> 
          <%= task.content %>
            </td>
          </tr>
            
        <% end %>

      </tbody>       
    </table>
   
  
    
    <div>
      <%= paginate @tasks %>
    </div>
    
  <% end %>  
        
    <%= link_to "新規タスクの投稿", new_task_path, class: "btn btn-success" %>
            